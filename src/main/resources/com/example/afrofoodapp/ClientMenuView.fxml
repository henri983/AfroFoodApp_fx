<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.monrestaurant.controller.ClientMenuController">
    <top>
        <HBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Mon Restaurant" textFill="white" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnPanier" text="Panier (0)" onAction="#goToPanier"/>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <GridPane fx:id="productGrid" hgap="20" vgap="20">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
