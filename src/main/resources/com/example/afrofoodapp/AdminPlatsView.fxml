<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.foodapp.controller.AdminPlatsController"
            prefHeight="600.0" prefWidth="1000.0">

    <top>
        <HBox spacing="15" style="-fx-background-color: #c0392b; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="Admin Dashboard" textFill="white">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Gérer les Utilisateurs" onAction="#goToUsers" style="-fx-background-color: #e67e22; -fx-text-fill: white;"/>
            <Button text="Déconnexion" onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #c0392b;"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.65">
            <VBox spacing="10" style="-fx-padding: 15;">
                <Label text="Liste des plats" style="-fx-font-weight: bold;"/>
                <TableView fx:id="tablePlats" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                        <TableColumn fx:id="colPrix" text="Prix" prefWidth="80"/>
                        <TableColumn fx:id="colPays" text="Pays" prefWidth="100"/>
                        <TableColumn fx:id="colRegion" text="Région" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                </TableView>
                <Button text="Supprimer la sélection" onAction="#handleSupprimer" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </VBox>

            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
                    <Label text="Ajouter un plat" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    
                    <Label text="Nom du plat"/>
                    <TextField fx:id="txtNom"/>
                    
                    <Label text="Description"/>
                    <TextArea fx:id="txtDescription" prefHeight="60" wrapText="true"/>
                    
                    <Label text="Prix (€)"/>
                    <TextField fx:id="txtPrix"/>
                    
                    <Label text="Pays d'origine"/>
                    <TextField fx:id="txtPays"/>
                    
                    <Label text="Région"/>
                    <TextField fx:id="txtRegion"/>
                    
                    <Label text="Nom de l'image (ex: yassa.jpg)"/>
                    <TextField fx:id="txtImage"/>

                    <Button text="Enregistrer" onAction="#handleAjouter" 
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" 
                            maxWidth="Infinity"/>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
