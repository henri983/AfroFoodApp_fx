<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Avatar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foodapp.controller.LoginController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ToolBar prefHeight="40.0" prefWidth="200.0">
     <items>
       <Button mnemonicParsing="false" onAction="#handleRetour" text="Retour" />
     </items>
   </ToolBar>

                <Label text="Bienvenue sur Afro Food App" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
   <Avatar>
      <image>
         <Image url="@images/logos/logo1.jpeg" />
      </image>
   </Avatar>

    <Label text="Connexion" textFill="#7f8c8d">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <TextField fx:id="emailField" maxWidth="300.0" promptText="Adresse Email" />

    <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Mot de passe" />

    <Button maxWidth="300.0" onAction="#handleLogin" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Se connecter">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Label fx:id="errorLabel" textFill="#e74c3c" />

    <Hyperlink onAction="#goToInscription" style="-fx-cursor: hand;" text="Pas encore de compte ? S'inscrire ici" />
</VBox>
