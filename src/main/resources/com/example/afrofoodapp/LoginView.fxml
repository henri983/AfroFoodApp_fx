<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foodapp.controller.LoginController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Bienvenue au Restaurant" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Connexion" textFill="#7f8c8d">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <TextField fx:id="emailField" maxWidth="300.0" promptText="Adresse Email" />

    <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Mot de passe" />

    <Button maxWidth="300.0" onAction="#handleLogin" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Se connecter">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Label fx:id="errorLabel" textFill="#e74c3c" />

    <Hyperlink onAction="#goToInscription"
               text="Pas encore de compte ? S'inscrire ici"
               style="-fx-cursor: hand;" />
</VBox>