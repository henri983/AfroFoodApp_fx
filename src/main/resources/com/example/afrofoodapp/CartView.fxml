<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.foodapp.controller.CartController">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Votre Panier" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableCart" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNom" text="Plat" prefWidth="200"/>
            <TableColumn fx:id="colPrix" text="Prix Unitaire" prefWidth="100"/>
            <TableColumn fx:id="colQte" text="Quantité" prefWidth="80"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Label fx:id="lblTotal" text="Total : 0.00 €" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button text="Valider la commande" onAction="#handleValider" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Retour au Menu" onAction="#goBackToMenu"/>
    </HBox>
</VBox>
